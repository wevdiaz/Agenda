<%- include("parts/head")  %> 
<%- include("parts/nav")  %> 

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center">Login</h1>
                <p class="text-center lead">Faça o seu login ou crie sua conta</p>   
                
                <div class="row">
                    <div class="col-lg">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você ainda não tem conta, preencha os dados abaixo.</p>
                        <form action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label for="password">Senha</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Criar minha conta</button>
                        </form>
                    </div>
                    <div class="col-lg">
                        <h4>Entrar na sua conta</h4>
                        <p>Se você já tem conta, faça o login abaixo.</p>
                        <form action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label for="password">Senha</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Entrar</button>
                        </form>
                    </div>
                </div>

            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include("parts/footer")  %>     